{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "noEmit": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "incremental": false,
    "isolatedModules": false
